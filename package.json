{
  "name": "sindicato-ufm",
  "version": "1.0.0",
  "description": "Sitio dedicado a las ideas libres. ",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist",
    "copy": "copyfiles --up 1 src/components/**/*.html dist/",
    "build": "npm run copy && tsc",
    "live": "npm run build && npm start",
    "watch": "nodemon"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run live",
    "ext": ["ts", "html"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nevicad/sindicato-ufm.git"
  },
  "author": "Fabrizio Delcompare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nevicad/sindicato-ufm/issues"
  },
  "homepage": "https://github.com/nevicad/sindicato-ufm#readme",
  "dependencies": {
    "bigojs": "^1.0.2",
    "copyfiles": "^2.3.0",
    "express": "^4.17.1",
    "pg": "^8.4.2",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/pg": "^7.14.6",
    "@types/showdown": "^1.9.3",
    "nodemon": "^2.0.4"
  }
}
